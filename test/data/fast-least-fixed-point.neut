(ensure core/0.1.0.0
  "https://gitlab.com/veka41/neut-core/-/raw/master/release/0.1.0.0.tar.xz")

(include "core/0.1.0.0/notation.neut")

(include "core/0.1.0.0/integer.neut")

(define µ
  ((f (Π ((_ tau)) tau)))
  (Π
    ((F (Π ((_ (Π ((_ tau)) tau))) tau))
     (_ (Π ((b tau) (_ (f b))) (F f))))
    (F f)))

(define µ.in
  ((f (hom tau tau))
   (x (f (µ f))))
  (witness (µ f)
    (unsafe.cast (f (µ f)) (µ f) x)))

(define µ.out
  ((f (hom tau tau))
   (x (µ f)))
  (witness (f (µ f))
    (unsafe.cast (µ f) (f (µ f)) x)))

(inductive list-f
  ((a tau)
   (r tau))
  (nil ()
    (list-f a r))
  (cons ((_ a) (_ r))
    (list-f a r)))

(define list
  ((a tau))
  (µ (list-f a _)))

(define list.nil
  ((a tau))
  (witness (list a)
    (µ.in (list-f a _) (list-f.nil a (list a)))))

(define list.cons
  ((a tau)
   (x a)
   (xs (list a)))
  (witness (list a)
    (µ.in (list-f a _) (list-f.cons a (list a) x xs))))

(define length
  ((a tau)
   (xs (list a)))
  (witness i64
    (list-f.case
      i64
      a
      (list a)
      (µ.out (list-f a _) xs)
      (λ ()
        0)
      (λ (y ys)
        (add-i64 1 (length a ys))))))

(let xs (list.cons i64 0 (list.cons * 1 (list.cons * 2 (list.nil *)))))

(i64.print (length i64 xs))

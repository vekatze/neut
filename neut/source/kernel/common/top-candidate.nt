import {
  sero.common.get {get-int64},
  sero.common.put {put-int64},
  sero.sero {Sero, sero},
  this.language.common.definite-description {definite-description},
  this.language.raw-term.raw-term {loc},
}

data candidate-kind {
| Constant
| Constructor
| Function
}

data top-candidate {
| Top-Candidate(
    loc: loc,
    dd: definite-description,
    kind: candidate-kind,
  )
}

inline candidate-kind-sero: sero(candidate-kind) {
  Sero of {
    put := {
      function (k, v) {
        case v {
        | Constant =>
          put-int64(k, 0);
        | Constructor =>
          put-int64(k, 1);
        | Function =>
          put-int64(k, 2);
        }
      }
    },
    get := {
      function (k) {
        try tag = get-int64(k);
        match tag {
        | 0 =>
          Right(box {Constant})
        | 1 =>
          Right(box {Constructor})
        | 2 =>
          Right(box {Function})
        | _ =>
          none
        }
      }
    },
  }
}

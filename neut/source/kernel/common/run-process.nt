import {
  core.process {process-spec},
  this.logger.logger-kit {logger-kit},
}

data run-process-kit {
| _Run-Process-Kit(
    logger-kit: logger-kit,
  )
}

define make-run-process-kit(logger-kit: logger-kit) {
  _Run-Process-Kit(logger-kit)
}

data spec {
| Spec(
    cmd-spec: process-spec,
    cwd: ?text,
  )
}

data command-error {
| Command-Error(
    spec: spec,
    exit-code: int,
    err-str: text,
  )
}

import {
  core.int.show {show-int},
  core.text {format},
  this.color.rule.color-kit {color-kit},
  time.time {Time, _format-nanoseconds, time},
}

data logger-kit {
| _Logger-Kit(
    color-kit: color-kit,
    enable-debug-mode: bool,
    base-time: time,
  )
}

define _show-time(m: time): text {
  let Time of {seconds := s, nanoseconds := ns} = m;
  format("{}{}", List[show-int(s), _format-nanoseconds(ns, 6)])
}

import {
  core.ansi {style},
}

data progress-indicator {
| _Progress-Indicator(
    working-title: text,
    completed-title: text,
    color: vector(style),
    progress: ?pair(int, int),
  )
}

inline frame: type {
  int
}

define _choose-spinner(i: int): &text {
  match i {
  | 0 =>
    "⠋"
  | 1 =>
    "⠙"
  | 2 =>
    "⠹"
  | 3 =>
    "⠸"
  | 4 =>
    "⠼"
  | 5 =>
    "⠴"
  | 6 =>
    "⠦"
  | 7 =>
    "⠧"
  | 8 =>
    "⠇"
  | _ =>
    "⠏"
  }
}

define _bar-length: int {
  32
}
